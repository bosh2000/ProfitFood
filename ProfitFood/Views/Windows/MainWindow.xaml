<Window
    x:Class="ProfitFood.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:ProfitFood"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:cmd="clr-namespace:ProfitFood.UI.Infrastructure.Commands"
    xmlns:vm="clr-namespace:ProfitFood.UI.ViewModels"
    Title="{Binding Path=TitleWindows}"
    Width="800"
    Height="450"
    Icon="/Resource/Images/main.ico"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainWindowsViewModel />
    </Window.DataContext>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход">
                    <MenuItem.Command>
                        <cmd:CloseApplicationCommand/>
                    </MenuItem.Command>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Справочники">
                <MenuItem Header="Продукты" />
                <MenuItem Header="Тип продуктов" />
                <MenuItem Header="Единицы измерения">
                    <MenuItem Header="Базовая единица измерения" />
                    <MenuItem Header="Складская" />
                    <MenuItem Header="Учетная" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе" />
            </MenuItem>
        </Menu>
    </DockPanel>

</Window>
