<Window
    x:Class="ProfitFood.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cmd="clr-namespace:ProfitFood.UI.Infrastructure.Commands"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.com/icons/"
    xmlns:local="clr-namespace:ProfitFood"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ProfitFood.UI.ViewModels"
    Title="{Binding Path=TitleWindows}"
    Width="800"
    Height="450"
    Icon="/Resource/Images/main.ico"
    mc:Ignorable="d">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход">
                    <MenuItem.Command>
                        <cmd:CloseApplicationCommand />
                    </MenuItem.Command>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Справочники">
                <MenuItem
                    Command="{Binding OpenTabCommand}"
                    CommandParameter="Products"
                    Header="Продукты" />
                <MenuItem
                    Command="{Binding OpenTabCommand}"
                    CommandParameter="TypeProduct"
                    Header="Тип продуктов" />
                <MenuItem Header="Единицы измерения">
                    <MenuItem
                        Command="{Binding OpenTabCommand}"
                        CommandParameter="BaseUnit"
                        Header="Базовая единица измерения" />
                    <MenuItem
                        Command="{Binding OpenTabCommand}"
                        CommandParameter="WarehouseUnit"
                        Header="Складская" />
                    <MenuItem
                        Command="{Binding OpenTabCommand}"
                        CommandParameter="AccountingUnits"
                        Header="Учетная" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе" />
            </MenuItem>
        </Menu>
        <TabControl ItemsSource="{Binding TabItems}" SelectedItem="{Binding SelectedTab}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Header}" />
                        <Button
                            Margin="5,0,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding CloseTabCommand}"
                            CommandParameter="{Binding Header}"
                            Content="✕" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding Content}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </DockPanel>
</Window>